<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                layout="@layout/toolbar"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="88dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:src="@drawable/app_logo" />

            <TextView
                android:id="@+id/text_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WorkEase"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"/>

            <TextView
                android:id="@+id/text_app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textColor="#888888"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:id="@+id/text_about_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to our app! We strive to provide a seamless and intuitive user experience for all our users.\n\nWe are dedicated to delivering high-quality features and continuously improving our app to meet your needs. Your feedback is invaluable to us, so please feel free to reach out to us using the Contact Details below."
                android:lineSpacingMultiplier="1.6"
                android:layout_marginBottom="32dp"
                android:padding="20dp"
                android:elevation="4dp"/>

            <TextView
                android:id="@+id/text_developer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developers"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/text_developer1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dhanyashree"
                android:layout_marginBottom="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/text_developer1_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile: +91 8762202557"
                android:layout_marginBottom="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/text_developer1_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: 2002dhanyashree@gmail.com"
                android:layout_marginBottom="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/text_developer2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anwitha"
                android:layout_marginBottom="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/text_developer2_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile: +91 7019911445"
                android:layout_marginBottom="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/text_developer2_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: anwitha2002@gmail.com"
                android:layout_marginBottom="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include layout="@layout/nav_drawer" />

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
